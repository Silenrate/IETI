<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="15dp"
	android:paddingRight="15dp"
	android:descendantFocusability="beforeDescendants">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="15dp"
		android:paddingTop="15dp"
		android:paddingBottom="15dp"
		android:paddingRight="15dp"
		android:background="@drawable/card_background_selector"
		android:descendantFocusability="afterDescendants">

		<ImageView
			android:id="@+id/place_image"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:srcCompat="@drawable/ic_menu_gallery" />

		<TextView
			android:id="@+id/place_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:fontFamily="sans-serif-black"
			android:text="Nombre" />

		<TextView
			android:id="@+id/place_address"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Ciudad, Departamento" />

		<TextView
			android:id="@+id/place_description"
			android:layout_width="351dp"
			android:layout_height="wrap_content"
			android:text="Descripcion" />

		<TextView
			android:id="@+id/place_owner"
			android:layout_width="351dp"
			android:layout_height="wrap_content"
			android:fontFamily="serif"
			android:text="Propietario" />

		<Button
			android:id="@+id/makebookButton"
			android:layout_width="351dp"
			android:layout_height="36dp"
			android:text="Make A Reservation" />

		<Button
			android:id="@+id/add_review_button"
			android:layout_width="351dp"
			android:layout_height="wrap_content"
			android:text="@string/add_review_button" />

		<Button
			android:id="@+id/view_reviews_button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="VIEW REVIEWS" />

	</LinearLayout>
</FrameLayout>